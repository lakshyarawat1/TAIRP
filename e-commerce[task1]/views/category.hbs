    <section>
     
        {{#each products}}
            <div class="product">
                <a href="/product/{{this.id}}">
                    <img src="{{this.image}}" alt="product image">
                    <h3>{{this.name}}</h3>
                    <p>Rs. {{this.price}}</p>
                </a>
            </div>
        {{/each}}
    </section>

    {{> footer}}
</body>
